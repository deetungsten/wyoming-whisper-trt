# Use the base TensorRT image
FROM nvcr.io/nvidia/tensorrt:25.08-py3-igpu

WORKDIR /usr/src

# Update and install dependencies
RUN apt-get update && apt-get install -y \
    python3-venv \
    ffmpeg \
    git \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy local source code
COPY . /usr/src/wyoming-whisper-trt

# Create virtual environment with system site-packages to access TensorRT
RUN cd wyoming-whisper-trt \
    && python3 -m venv --system-site-packages .venv \
    && .venv/bin/pip install --upgrade pip setuptools wheel \
    && .venv/bin/pip install \
       wyoming==1.7.2 \
       openai-whisper==20250625 \
       psutil~=7.0.0 \
       packaging~=25.0 \
       onnx-graphsurgeon==0.5.8 \
       torch==2.8.0 \
    && chmod +x ./script/setup

# Set up library paths for runtime
ENV LD_LIBRARY_PATH=/usr/local/lib/python3.12/dist-packages/tensorrt_libs:$LD_LIBRARY_PATH

# Note: torch2trt installation skipped due to missing libnvdla_compiler.so
# Will try to install at runtime or find alternative approach

WORKDIR /
COPY ./run.sh ./
    
EXPOSE 10300
    
ENTRYPOINT ["bash", "/run.sh"]
